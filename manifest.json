{
  "manifest_version": 3,
  "name": "e-Gov法令検索フォーマッタ",
  "description": "e-Gov法令検索の表示を見やすくします。",
  "version": "1.0",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "js": ["styles.js"],
      "css": ["styles.css"],
      "matches": ["https://laws.e-gov.go.jp/*"]
    }
  ]
}
